<%- include("partials/header") %>
<h1>Home</h1>
<p><%=homeText%></p>
<% posts.forEach((post)=>{ %>
    <h1><a href="/post/<%=post._id%>" class="postTitle"><%=post.title%></a></h1>
        <% if (post.body.length>=100){ %>
            <p><%=post.body.slice(0,99)+"... "%><a href="/post/<%=post._id%>">Read More</a></p>
        <% } else { %>
            <p><%=post.body%></p>
        <% } %>
<% }); %>



<%- include("partials/footer") %>



